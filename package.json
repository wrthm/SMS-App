{
  "name": "studentmanagementsystem_appserver",
  "version": "1.0.0",
  "description": "The backend application server for the Student Management System.",
  "main": "src/index.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc && copyfiles -u 1 src/**/*.sql dist/",
    "dev": "cross-env NODE_ENV=development ts-node-dev --respawn --transpile-only ./src/index.ts",
    "prod": "npm run build && cross-env NODE_ENV=production node ./dist/index.js",
    "prod-dev-mode": "npm run build && cross-env NODE_ENV=development node ./dist/index.js",
    "start": "npm run prod",
    "docs-server": "node ./src/hostAPIDocs.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/express": "^4.17.11",
    "@types/ip": "^1.1.0",
    "@types/pg": "^7.14.11",
    "cross-env": "^7.0.3",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-log-url": "^1.5.1",
    "express-promise-router": "^4.0.1",
    "express-validation": "^3.0.8",
    "ip": "^1.1.5",
    "pg": "^8.5.1",
    "pg-promise": "^10.9.5",
    "swagger-ui-express": "^4.1.6",
    "typescript": "^4.2.3",
    "winston": "^3.3.3",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@rmp135/sql-ts": "^1.8.2",
    "@types/uuid": "^8.3.0",
    "copyfiles": "^2.4.1",
    "ts-node-dev": "^1.1.6"
  }
}
